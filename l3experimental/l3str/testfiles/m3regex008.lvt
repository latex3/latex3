\documentclass{minimal}
\input{regression-test}

\RequirePackage[log-functions, check-declarations]{expl3}
\RequirePackage{l3regex}

\begin{document}

\START
\AUTHOR{Bruno Le Floch}
\ExplSyntaxOn

\OMIT

\seq_new:N \l_foo_seq

\cs_new_protected:Npn \test:nn #1 #2
  {
    \regex_extract_all:nnN {#1} {#2} \l_foo_seq
    \seq_map_inline:Nn \l_foo_seq
      { \tex_message:D { \exp_not:n { {##1} } } }
    \tex_message:D { \iow_newline: }
  }

\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST { Repeated~group~matching~nothing }
  {
    \test:nn { (a|b|)      c } { abc }
    \test:nn { (a|b|)*     c } { abc }
    \test:nn { (a|b|)*?    c } { abc }
    \test:nn { (a|b|)?     c } { abc }
    \test:nn { (a|b|)??    c } { abc }
    \test:nn { (a|b|)+     c } { abc }
    \test:nn { (a|b|)+?    c } { abc }
    \test:nn { (a|b|){1}   c } { abc }
    \test:nn { (a|b|){1}?  c } { abc }
    \test:nn { (a|b|){1,}  c } { abc }
    \test:nn { (a|b|){1,}? c } { abc }
    \test:nn { (a|b|){1,2} c } { abc }
    \test:nn { (a|b|){1,2}?c } { abc }
    \test:nn { ((a|b|)*?c?)* } { acbbcc }
    \test:nn { ((a|b|)* c?)* } { acbbcc }
    \test:nn { ((a|b|)??c?)* } { acbbcc }
    \test:nn { ((a|b|)? c?)* } { acbbcc }
    \test:nn { ((a|b|)+?c?)* } { acbbcc }
    \test:nn { ((a|b|)+ c?)* } { acbbcc }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\END
