\documentclass{minimal}
\input{regression-test}
\RequirePackage[check-declarations]{expl3}
\RequirePackage{l3regex}

\begin{document}
\START
\AUTHOR{Bruno Le Floch}
\ExplSyntaxOn
\seq_new:N \l_foo_seq
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\cs_set_protected:Npn \test:nn #1#2
  {
    \regex_extract_all:nnN {#1} {#2} \l_foo_seq
    \seq_show:N \l_foo_seq
  }
\TEST{letter~case}{
  \test:nn { a(?i)b|c } { c C ab aB Ab AB }
  \test:nn { a(?i)b(?:c(?-i)d|e)*f } { aBCdeF abCdCdeF abcDf abEf }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Repeat~characters}{
  \test:nn { (\d{2,4}).(\d{2,5}?).{0,2} ! }
    {
      12345!
      123456!
      1234567!
      12345678!
      123456789!
      1234567890!
      12345678901!
      123456789012!
      1234567890123!
      12345678901234!
      123456789012345!
      123-4567!!!
    }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Resetting~capturing~group~number}{
  \regex_extract_all:nnN
    { (\<) (?| ab(c) | (d(e)f)g | h )* ! (\>) }
    { junk < abc defg h ! > junk < h defg abc h ! > junk }
    \l_foo_seq
  \seq_show:N \l_foo_seq
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Repeat~groups}{
  \test:nn { (a(\d){1,}){2} ! }
    {
      a0!
      a00a!
      a0a1!
      a0a11!
      a00a1!
      a00a11!
      a000a1!
      a0a1a2!
      a0a1a2a3!
      a0a1a2a3a4!
      a00a11a22a33a44!
      a0a1a2a3a4a5!
    }
  \test:nn { (a(\d){1,2}){2,5} ! }
    {
      a0!
      a00a!
      a0a1!
      a0a11!
      a00a1!
      a00a11!
      a000a1!
      a0a1a2!
      a0a1a2a3!
      a0a1a2a3a4!
      a00a11a22a33a44!
      a0a1a2a3a4a5!
    }
  \test:nn { (a(\d){0,2}){3,} ! }
    {
      aa0!
      aa00a!
      aa0a1!
      aa0a11!
      aa00a1!
      aa00a11!
      aa000a1!
      aa0a1a2!
      aa0a1a2a3!
      aa0a1a2a3a4!
      aa00a11a22a33a44!
      aa0a1a2a3a4a5!
    }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\END
