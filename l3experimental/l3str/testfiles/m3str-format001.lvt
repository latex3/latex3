%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TESTEXP { Invalid~formattings~for~token~lists }
  {
    | \tl_format:nn { abcdef } { =  } | \NEWLINE
    | \tl_format:nn { abcdef } { +  } | \NEWLINE
    | \tl_format:nn { abcdef } { ~  } | \NEWLINE
    | \tl_format:nn { abcdef } { -  } | \NEWLINE
    | \tl_format:nn { abcdef } { .- } | \NEWLINE
    | \tl_format:nn { abcdef } { ?  } | \NEWLINE % no error :(
    | \tl_format:nn { abcdef } { < > . . } | \NEWLINE
    | \tl_format:nn { abcdef } { + 8.3 t } | \NEWLINE
  }

