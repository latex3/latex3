% \subsubsection{Splitting a token list by matches of a regex}
%
% \begin{macro}[aux]{\regex_split_aux:NnnN}
%   Recurse through the matches, and for each, do the following.
%   Extract the submatches, remove the whole submatch, which
%   should not be kept in the final result (only capturing groups
%   should produce output for that function). Then add to the
%   left of the sequence \cs{l_regex_submatches_seq} the part
%   of the token list before the match. We then add all the items
%   of \cs{l_regex_submatches_seq} in the result sequence.
%   This process must be inhibited to avoid creating empty items
%   if the regex matched an empty token list at the place where
%   the match attempt started.
%   After the last successful match, we need to add to the result
%   the part of the token list after the last match, unless the
%   last match was empty and at the very end.
%    \begin{macrocode}
\cs_new_protected:Npn \regex_split_aux:NnnN #1#2#3#4
  {
    \group_begin:
      \seq_clear:N \l_regex_result_seq
      \tl_set:Nn \l_regex_every_match_tl
        {
          \if_num:w \l_regex_start_step_int < \l_regex_success_step_int
            \regex_extract:
            \seq_pop:NN \l_regex_submatches_seq \l_regex_tmpa_tl
            \regex_extract_aux:nTF {0}
              {
                \regex_query_set_substr:NNN \l_regex_tmpc_tl
                  \l_regex_start_step_int \l_regex_tmpa_tl
                \seq_put_left:No \l_regex_submatches_seq { \l_regex_tmpc_tl }
              }
              { \msg_kernel_error:nn { regex } { internal } }
            \seq_concat:NNN \l_regex_result_seq
              \l_regex_result_seq \l_regex_submatches_seq
          \fi:
          \regex_match_once:
        }
      #1 {#2} {#3}
      \if_num:w \l_regex_start_step_int = \l_regex_current_step_int
        \bool_if:NF \l_regex_success_empty_bool
          { \seq_put_right:Nn \l_regex_result_seq { } }
      \else:
        \regex_query_set_substr:NNN \l_regex_tmpc_tl
          \l_regex_start_step_int \l_regex_current_step_int
        \seq_put_right:No \l_regex_result_seq { \l_regex_tmpc_tl }
      \fi:
    \exp_args:NNNo \group_end:
    \tl_set:Nn #4 \l_regex_result_seq
  }
%    \end{macrocode}
% \end{macro}
%
% \subsubsection{Replacement}
%
% \begin{macro}[aux]{\regex_replace_once_aux:NnnN}
%   The replacement text is analysed by \cs{regex_replacement:n},
%   which defines \cs{l_regex_replacement_tl} to expand to the
%   replaced token list, assuming that submatches are stored in
%   \cs{l_regex_submatches_seq}. If there is a match, we grab
%   the parts before and after it in \cs{l_regex_tmpa_tl} and
%   \cs{l_regex_tmpb_tl}, and get the result by \texttt{x}-expansion
%   as \cs{l_regex_replaced_tl}. If there is no match,
%   don't change the user's variable.
%    \begin{macrocode}
\cs_new_protected:Npn \regex_replace_once_aux:NnnN #1#2#3#4
  {
    \group_begin:
      \tl_clear:N \l_regex_every_match_tl
      \regex_replacement:n {#3}
      \exp_args:Nno #1 {#2} #4
      \regex_extract:
      \regex_extract_aux:nTF {0}
        {
          \regex_query_set_substr:NNN \l_regex_tmpa_tl
            \c_zero \l_regex_tmpa_tl
          \regex_query_set_substr:NNN \l_regex_tmpb_tl
            \l_regex_tmpb_tl \l_regex_query_length_int
          \tl_set:Nx \l_regex_replaced_tl
            {
              \l_regex_tmpa_tl
              \l_regex_replacement_tl
              \l_regex_tmpb_tl
            }
        }
        { }
      \if_meaning:w \c_true_bool \g_regex_success_bool
        \exp_args:NNNo \group_end:
        \tl_set:Nn #4 { \l_regex_replaced_tl }
      \else:
        \group_end:
      \fi:
  }
%    \end{macrocode}
% \end{macro}
%
% \begin{macro}[aux]{\regex_replace_all_aux:NnnN}
%   For every match, extract submatches, and add the part before
%   the beginning of the match, as well as the replacement,
%   to the result. After the last match, extract the end
%   of the token list, and add it to the replaced token list.
%    \begin{macrocode}
\cs_new_protected:Npn \regex_replace_all_aux:NnnN #1#2#3#4
  {
    \group_begin:
      \tl_set:Nn \l_regex_every_match_tl
        {
          \regex_extract:
          \regex_extract_aux:nTF {0}
            {
              \regex_query_set_substr:NNN \l_regex_tmpc_tl
                \l_regex_start_step_int \l_regex_tmpa_tl
              \tl_put_right:Nx \l_regex_replaced_tl
                {
                  \l_regex_tmpc_tl
                  \l_regex_replacement_tl
                }
            }
            { \msg_kernel_error:nn { regex } { internal } }
          \regex_match_once:
        }
      \tl_clear:N \l_regex_replaced_tl
      \regex_replacement:n {#3}
      \exp_args:Nno #1 {#2} #4
      \regex_query_set_substr:NNN \l_regex_tmpa_tl
        \l_regex_start_step_int \l_regex_query_length_int
      \tl_put_right:Nx \l_regex_replaced_tl { \l_regex_tmpa_tl }
    \exp_args:NNNo \group_end:
    \tl_set:Nn #4 \l_regex_replaced_tl
  }
%    \end{macrocode}
% \end{macro}
