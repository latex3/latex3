\cs_new_protected:Npn \@@_item_catcode:nT #1
  {
    \if_int_odd:w \__int_eval:w #1 / \@@_item_catcode: \__int_eval_end:
      \exp_after:wN \use:n
    \else:
      \exp_after:wN \use_none:n
    \fi:
