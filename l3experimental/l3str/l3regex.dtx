  }
\cs_new_protected_nopar:Npn \regex_extract_aux:nTF #1#2#3
  {
    \prop_get:NnNTF \l_regex_success_submatches_prop
      { #1 < } \l_regex_tmpa_tl
      {
        \prop_get:NnNTF \l_regex_success_submatches_prop
          { #1 > } \l_regex_tmpb_tl
          {#2}
          {#3}
      }
      {#3}
