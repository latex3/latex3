    \@@_format_val_do:fn { \str_head:n {#1} } \int_compare:nNnT < 0
      {
        \@@_format_val_do:fn { \str_head:n {#1} }
          {
            \msg_expandable_error:nnnn
              { str-format } { invalid-value } {#1}
          }
      }
  }
\cs_new_eq:cc { @@_format / precision :nn } { @@_format / width :nn }
