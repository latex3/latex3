  { \exp_args:Nf \fp_show_aux:n { \fp_to_tl:n {#1} } }
\cs_new_protected:Npn \fp_show_aux:n #1 { \use:nn \tl_show:n { {#1} } }
\cs_generate_variant:Nn \fp_show:N { c }
