%    \begin{macrocode}
\cs_new:Npn \fp_div_back_npos:Nnwnw #1 #2 #3#4#5#6; #7 #8;
  {
    \exp_after:wN \fp_aux_sanitize:Nw
    \exp_after:wN #1
    \int_use:N \int_eval:w
      #7 - #2
      \fp_div_mantissa_i:wNwnn #3; #4;
      #8 {#3}{#4}{#5}{#6} #1
  }
%    \end{macrocode}
% \end{macro}
