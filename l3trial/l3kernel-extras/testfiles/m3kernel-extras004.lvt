\TEST { group_insert_after }
  {
    \group_begin:
      \cs_set:Npn \foo: { foo }
      \group_insert_after:N \tl_show:n
      \group_insert_after:n { { abc } }
      \group_insert_after:N \cs_show:N
      \group_insert_after:x { \exp_not:c { foo: } }
      \cs_show:N \foo:
    \group_end:
  }

