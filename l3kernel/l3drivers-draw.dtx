\cs_new_protected:Npn \driver_draw_cm:nnnn #1#2#3#4
  {
    \@@_draw_literal:n
      {
        [
          \fp_eval:n {#1} ~ \fp_eval:n {#2} ~
          \fp_eval:n {#3} ~ \fp_eval:n {#4} ~
          0 ~ 0
        ] ~
        concat
      }
