% \begin{variable}{\g_@@_streams_prop}
%   The name of the file attached to each stream is tracked in a property
%   list.
%    \begin{macrocode}
\prop_new:N \g_@@_streams_prop
%<*package>
\prop_gput:Nnn \g_@@_streams_prop { 0 } { LaTeX2e~reserved }
%</package>
%    \end{macrocode}
% \end{variable}
