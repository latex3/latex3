\cs_new:Npn \@@_tuple_compare_back_loop:w #1#2 ; #3 @ #4#5 ;
  {
    \use_none:n #1
    \use_none:n #4
    \if_int_compare:w
        \@@_compare_back_any:ww #1 #2 ; #4 #5 ; = \c_zero_int
    \else:
      2 \exp_after:wN \prg_break:
    \fi:
