\DocumentMetadata{}
\documentclass{minimal}

\input{regression-test}

\ExplSyntaxOn
\debug_on:n { check-declarations , deprecation , log-functions }

\OMIT
  \cs_set_protected:Npn \test:n #1
    {
      \hbox_set:Nn \l_tmpa_box
        {
          \group_begin:
            #1
            Hello
          \group_end:
        }
      \box_show:N \l_tmpa_box
    }
\TIMO

\START

\AUTHOR{Joseph ~ Wright ,~ Yukai ~ Chou}

\TEST { Select }
  {
    \clist_map_inline:nn { 1 , 0.5 , 2 , -1 }
      {
        \test:n { \opacity_select:n {#1} }
        \test:n { \opacity_fill:n {#1} }
        \test:n { \opacity_stroke:n {#1} }
      }
  }

\TEST { Combinations }
  {
    % fill and stroke works with each other
    \test:n
      {
        \opacity_fill:n   { 0.3 }
        \opacity_stroke:n { 0.5 }
      }
    \test:n
      {
        \opacity_stroke:n { 0.5 }
        \opacity_fill:n   { 0.3 }
      }
    % each of fill and stroke overwrites select in part
    \test:n
      {
        \opacity_select:n { 0.5 }
        \opacity_fill:n   { 0.3 }
      }
    \test:n
      {
        \opacity_select:n { 0.3 }
        \opacity_stroke:n { 0.5 }
      }
    % select resets both
    \test:n
      {
        \opacity_fill:n   { 0.3 }
        \opacity_select:n { 0.7 }
      }
    \test:n
      {
        \opacity_stroke:n { 0.5 }
        \opacity_select:n { 0.7 }
      }
  }

\OMIT
  \cs_set_protected:Npn \test:nn #1#2
    {
      \hbox_set:Nn \l_tmpa_box
        {
          #1
          Hello
          #2
        }
      \box_show:N \l_tmpa_box
    }
\TIMO

\TEST { Begin/end }
  {
    \clist_map_inline:nn { 1 , 0.5 , 2 , -1 }
      {
        \test:nn { \opacity_begin:n {#1} } { \opacity_end: }
        \test:nn { \opacity_fill_begin:n {#1} } { \opacity_fill_end: }
        \test:nn { \opacity_stroke_begin:n {#1} } { \opacity_stroke_end: }
      }
  }

\END
