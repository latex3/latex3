    \clist_put_right:Nn \l_tmpa_clist { { # \par } }
    \test:x { \clist_use:Nnnn \l_tmpa_clist { ~and~ } { ,~ } { ,~and~ } }
    \clist_set:Nn \l_tmpa_clist { a , b , c , d , e , f , \g , h , i }
    \test:x { \clist_use:Nnnn \l_tmpa_clist { ~and~ } { ,~ } { ,~and~ } }
