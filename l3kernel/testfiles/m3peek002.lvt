    \test:Nnn \peek_catcode:NTF  * \scan_stop:
    \test:Nnn \peek_catcode:NTF  \scan_stop: *
    \test:Nnn \peek_catcode:NTF  * \use_none:n
    \test:Nnn \peek_catcode:NTF  \use_none:n *
    \test:Nnx \peek_catcode:NTF  * { \token_to_str:N * }
    \test:Nxn \peek_catcode:NTF  { \token_to_str:N * } *
    \test:Nnn \peek_charcode:NTF * \scan_stop:
