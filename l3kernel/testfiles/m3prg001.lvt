\TEST{While~loops}{
  \int_set:Nn \cntr {0}
  \bool_while_do:nn {
    \int_compare_p:nNn \cntr < 5
  } {
    \int_incr:N \cntr
    \TYPE{ \int_use:N \cntr }
  }
