\documentclass{minimal}
\input{regression-test}

\RequirePackage[enable-debug]{expl3}
\ExplSyntaxOn
\debug_on:n { check-declarations , deprecation , log-functions }
\ExplSyntaxOff

\begin{document}
\START
\AUTHOR{Bruno Le Floch}
\ExplSyntaxOn

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\OMIT
\cs_new:Npn \test:nn #1#2
  {
    (#2)~
    \fp_to_tl:n { round (#1,#2) } , ~
    \fp_to_tl:n { floor (#1,#2) } , \NEWLINE
    .....~
    \fp_to_tl:n { trunc (#1,#2) } , ~
    \fp_to_tl:n { ceil  (#1,#2) } \NEWLINE
  }
\cs_new:Npn \test:n #1
  {
    \fp_to_tl:n {#1} : \NEWLINE
    \test:nn {#1} { 99999 }
    \test:nn {#1} { 9999 }
    \test:nn {#1} { 999 }
    \test:nn {#1} { 99 }
    \test:nn {#1} { 9 }
    \test:nn {#1} { 8 }
    \test:nn {#1} { 7 }
    \test:nn {#1} { 6 }
    \test:nn {#1} { 5 }
    \test:nn {#1} { 4 }
    \test:nn {#1} { 3 }
    \test:nn {#1} { 2 }
    \test:nn {#1} { 1 }
    \test:nn {#1} { 0 }
    \fp_to_tl:n { round (#1) } , ~
    \fp_to_tl:n { floor (#1) } , \NEWLINE
    .....~
    \fp_to_tl:n { trunc (#1) } , ~
    \fp_to_tl:n { ceil  (#1) } \NEWLINE
    \test:nn {#1} { -1 }
    \test:nn {#1} { -2 }
    \test:nn {#1} { -3 }
    \test:nn {#1} { -4 }
    \test:nn {#1} { -5 }
    \test:nn {#1} { -6 }
    \test:nn {#1} { -7 }
    \test:nn {#1} { -8 }
    \test:nn {#1} { -9 }
    \test:nn {#1} { -99 }
    \test:nn {#1} { -999 }
    \test:nn {#1} { -9999 }
    \test:nn {#1} { -99999 }
    \SEPARATOR \NEWLINE
  }
\fp_const:Nn \c__fp_max_fp { .9999 9999 9999 9999 e 10000 }
\fp_const:Nn \c__fp_min_fp { 1 e -10001 }
\TIMO

\TESTEXP { Rounding~special~values }
  {
    \test:n { -inf }
    \test:n { - \c__fp_max_fp }
    \test:n { - \c__fp_min_fp }
    \test:n { -0 }
    \test:n { 0 }
    \test:n { \c__fp_min_fp }
    \test:n { \c__fp_max_fp }
    \test:n { inf }
    \test:n { nan }
  }

\TESTEXP { Rounding~positive~floating~points }
  {
    \test:n { 123.456 }
    \test:n { 123456789.1234567 }
    \test:n { 1.23456 e-9 }
    \test:n { 1 }
    \test:n { .9999 9999 9999 9999 }
    \test:n { .9999 9950 0000 0001 }
    \test:n { .9999 995 }
    \test:n { .9999 9949 9999 9999 }
  }

\TESTEXP { Rounding~negative~floating~points }
  {
    \test:n { - 123.456 }
    \test:n { - 123456789.1234567 }
    \test:n { - 1.23456 e-9 }
    \test:n { - 1 }
    \test:n { - .9999 9999 9999 9999 }
    \test:n { - .9999 9950 0000 0001 }
    \test:n { - .9999 995 }
    \test:n { - .9999 9949 9999 9999 }
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\END
