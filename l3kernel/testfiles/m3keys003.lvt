\TEST { .choice: }
  {
    \keys_define:nn { module }
      {
        key-one .choice: ,
        key-one / a .code:n = { \TYPE { "a" } } ,
        key-one / b .code:n = { \TYPE { "b" } } ,
        key-one / c .code:n = { \TYPE { "#1" } } ,
      }
    \keys_set:nn { module }
      {
        key-one = a ,
        key-one = c ,
        key-one = d ,
        key-one     ,
      }
    \keys_define:nn { module }
      {
        key-one .choice: ,
        key-one / a .code:n       = { \TYPE { "a" } } ,
        key-one / b .code:n       = { \TYPE { "b" } } ,
        key-one / c .code:n       = { \TYPE { "#1" } } ,
        key-one / unknown .code:n = { \TYPE { "#1" } }
      }
    \keys_set:nn { module }
      {
        key-one = a ,
        key-one = c ,
        key-one = d ,
        key-one     ,
      }
    \keys_define:nn { module }
      {
        key-one .choice: ,
        key-one .default:n = { a },
        key-one / a .code:n = { \TRUE } ,
        key-one / b .code:n = { \FALSE } ,
      }
    \keys_set:nn { module }
      {
        key-one = a ,
        key-one = b ,
        key-one     ,
        key-one = d ,
      }
  }

