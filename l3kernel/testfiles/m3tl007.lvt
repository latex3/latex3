\TEST{tl_reverse}{
  \test:n { \tl_reverse:n { } }
  \test:n { \tl_reverse:n {a\bc} }
  \test:n { \tl_reverse:n {a~\bc} }
  \use:x
    {
      \test:n
        {
          \exp_not:N \tl_reverse:n
            { a ~ \use:n {~} \exp_not:N \b \c_space_tl }
        }
    }
  \test:n { \tl_reverse:n { { } } }
  \test:n { \tl_reverse:n { a ~ { \b { { } c } D # & \if_false: } } }
}

