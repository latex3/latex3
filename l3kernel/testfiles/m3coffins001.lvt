    \tex_showthe:D \coffin_dp:N \zzz
    \tex_showthe:D \coffin_dp:c { zzz }
    \tex_showthe:D \coffin_wd:N \zzz
    \tex_showthe:D \coffin_wd:c { zzz }
  }

\END
