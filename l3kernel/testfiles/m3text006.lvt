            \test_auxv:nnnnw {#1} {#2} {#3}
              { #4 \test_generate:n {#5} }
          }
      }
    \cs_set_protected:Npn \test_auxvi:nnn #1#2#3
      {
        \str_if_eq:eeTF
          { \text_map_function:nN {#2} \test_auxvii:n }
          {#3}
          { \TRUE }
          { \LONGTYPEOUT {#1} }
