    \cs_set_protected:Npx \test_auxiv:nnnn #1#2#3#4
      {
        \exp_not:N \test_auxv:nnnnw {#1} {#2} {#3} { } #4
          \tl_to_str:n { × } \exp_not:N \q_recursion_tail
