\TEST { Character~classes }
  {
    \regex_set:Nn \l_foo_regex { \/[a-cw-y"-&\<-\?]*?\? }
    \test:Nn \l_foo_regex { /abcwxy"#$ $&<=>?? }
    \test:Nn \l_foo_regex { /`? /d? /!? /'? /;? /@? /%? }
    \test:nn { [^\W \d _]+ } { ?@[]0349_abcAB_ }
    \test:nn { /[^](\x{8}] } { /^^H /] /( /^ }
  }

