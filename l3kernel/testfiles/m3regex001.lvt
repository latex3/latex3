\TEST { catcodes~and~cs~in~replacement }
  {
    \cs_set_nopar:cpn { x ? y } { y ? z }
    \cs_set_nopar:cpn { y ? z ^ } { z . a }
    \char_set_catcode_active:n { `? }
    \char_set_catcode_parameter:n { `^ }
    \regex_replace_all:nnN { .* }
      { \c{x\?y} \u{x\?y} \c{\u{x\?y}\^} \? }
      \l_tmpa_tl
    \tl_analysis_show:N \l_tmpa_tl
  }

