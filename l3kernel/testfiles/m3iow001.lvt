}
\TIMO

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Name~a~stream}{
  \iow_show:c { testa }
  \iow_new:N \testa
  \iow_log:c { testa }
  \iow_new:c {testb}
  \iow_new:N \testa
  \iow_new:c {testb}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\OMIT
\iow_new:N \test
\TIMO
\TEST{Open~a~write}{
  \iow_open:Nn \test { rubbish.log }
  \iow_show:N \test
  \iow_open:cn {test} { rubbish.log }
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Close~a~write}{
  \OMIT
  \iow_open:Nn \test { rubbish.log }
  \TIMO
  \iow_close:N \test
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Write~now}{
  \iow_now:Nx \testwrite { \l_test_tl }
  \iow_now:Nn \testwrite { \l_test_tl }
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Write~to~log}{
  \iow_log:x { \l_test_tl }
  \iow_log:n { \l_test_tl }
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Write~to~terminal}{
  \iow_term:x { \l_test_tl }
  \iow_term:n { \l_test_tl }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Write~at~shipout}{
  \iow_shipout:Nx \testwrite { \l_test_tl }
  \iow_shipout:Nn \testwrite { \l_test_tl }
  \OMIT
  Text \newpage
  \TIMO
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Write~at~shipout}{
  \iow_shipout_x:Nx \testwrite { \l_test_tl }
  \iow_shipout_x:Nn \testwrite \l_test_tl % no braces: this is not just \write
  \OMIT
  Text \newpage
  \TIMO
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST { Close~iow }
  {
    \iow_open:Nn \testwrite { testwrite.log }
    \file_input:n { testwrite.log }
    \iow_now:Nn \testwrite { \TYPE { test } }
    \iow_close:N \testwrite
    \file_input:n { testwrite.log }
  }

