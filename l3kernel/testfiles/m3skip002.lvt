\TEST{while_do/do_while}{
  \dim_zero:N \l_tmpa_dim
  \dim_while_do:nNnn {\l_tmpa_dim} < {10pt} {
    \message {[\dim_use:N \l_tmpa_dim]}
    \dim_add:Nn \l_tmpa_dim {2pt}
  }
  \SEPARATOR
  \dim_zero:N \l_tmpa_dim
  \dim_until_do:nNnn {\l_tmpa_dim} > {10pt} {
    \message {[\dim_use:N \l_tmpa_dim]}
    \dim_add:Nn \l_tmpa_dim {2pt}
