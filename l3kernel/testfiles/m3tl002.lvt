\TEST{map_variable}{
  \tl_map_variable:NNn \l_tmpa_tl \ii {
    \TYPE{[\ii]~}
  }
}

\tl_set:Nn \l_tmpa_tl {a{bb}cdzyx\ERROR}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{map_break~inline/variable}{
  \tl_map_inline:Nn \l_tmpa_tl {
    \str_if_eq:nnTF {#1} {z} {
      \tl_map_break:
    }{
      \TYPE{[#1]}    
    }
  }  
  \SEPARATOR
  \tl_map_variable:NNn \l_tmpa_tl \ii {
    \str_if_eq:nVTF {z} \ii {
      \tl_map_break:
    }{
      \TYPE{[\ii]}    
    }
  }
}

\cs_set:Npn \tl_tmp:n #1 {    
  \str_if_eq:nnTF {#1} {z} {
    \tl_map_break:
  }{
    \TYPE{[#1]}    
  }
}

