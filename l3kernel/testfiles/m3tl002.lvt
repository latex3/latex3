\TEST{reverse}{
  \tl_set:Nn       \l_tmpa_tl { abc \par xyz ~ \ERROR {1{~}23} 123 }
  \tl_show:N       \l_tmpa_tl
  {
    \tl_reverse:N  \l_tmpa_tl
    \tl_show:N     \l_tmpa_tl
  }
  \tl_show:N       \l_tmpa_tl
  {
    \tl_gset_eq:NN \g_tmpa_tl \l_tmpa_tl
    \tl_greverse:N \g_tmpa_tl
  }
  \tl_show:N       \g_tmpa_tl
}

