\OMIT
\tl_new:N  \l_test_tl
\tl_set:Nn \l_test_tl {text}
\msg_new:nnnn {module} {name} {text~#1} {more~text~#1~#2~#3~#4}
\msg_new:nnnn {module} {othername} {text~#1} {more~text~#1~#2~#3~#4}
\__kernel_msg_new:nnnn   {division} {name} {text~#1} {more~text~#1~#2~#3~#4}
