%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{Creating~new~fps}{ % 1
 \fp_new:N  \l_A_fp
 \fp_new:c  { l_A_fp }
 \fp_new:c  { l_B_fp }
 \fp_new:N  \g_A_fp
 \fp_new:c  { g_B_fp }
 \fp_log:N \l_A_fp
 \fp_log:N \g_A_fp
 \fp_log:N \l_B_fp
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{Set~fp}{ % 2
  \group_begin:
    \fp_set:Nn  \l_A_fp { 123.456 }
    \fp_set:Nn  \l_B_fp { -123.456 }
    \fp_gset:Nn \g_A_fp { 3 }
    \fp_gset:Nn \g_B_fp { -0.0 }
    \fp_log:N \l_A_fp
    \fp_log:c { l_B_fp }
    \fp_log:N \g_A_fp
    \fp_log:c { g_B_fp }
    \fp_set:Nn \l_A_fp { . }
    \fp_set:Nn \l_B_fp { - }
    \fp_log:N \l_A_fp
    \fp_log:c { l_B_fp }
    \fp_set:Nn \l_A_fp { -.001 }
    \fp_set:Nn \l_B_fp { }
    \fp_log:N \l_A_fp
    \fp_log:N \l_B_fp
    \fp_set:Nn \l_A_fp { 1.23456789e20 }
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { 123456.789e-20 }
    \fp_log:N \l_A_fp
  \group_end:
  \fp_log:N \l_A_fp
  \fp_log:N \l_B_fp
  \fp_log:N \g_A_fp
  \fp_log:N \g_B_fp
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{Zero~fp}{ % 3
  \fp_set:Nn  \l_A_fp { 1.234 }
  \fp_gset:Nn \g_A_fp { 1.234 }
  \group_begin:
    \fp_log:N \l_A_fp
    \fp_log:N \g_A_fp
    \fp_zero:N  \l_A_fp
    \fp_gzero:N \g_A_fp
    \fp_log:N \l_A_fp
    \fp_log:N \g_A_fp
  \group_end:
  \fp_log:N \l_A_fp
  \fp_log:N \g_A_fp
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{Set~fps~equal}{ % 4
  \fp_set:Nn \l_A_fp  { 123.456 }
  \fp_gset:Nn \g_A_fp { 123.456 }
  \fp_zero:N  \l_B_fp
  \fp_gzero:N \g_B_fp
  \group_begin:
    \fp_log:N \l_B_fp
    \fp_log:N \g_B_fp
    \fp_set_eq:NN  \l_B_fp \l_A_fp
    \fp_gset_eq:NN \g_B_fp \g_A_fp
    \fp_log:N \l_B_fp
    \fp_log:N \g_B_fp
  \group_end:
  \fp_log:N \l_B_fp
  \fp_log:N \g_B_fp
}

\TEST{Addition}{ % 5
  \group_begin:
    \fp_set:Nn \l_A_fp { 1 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 100 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 0.99 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 0.01 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { -3000.123 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 10000 }
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { 99.123456 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { -40000 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 40000 }
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { 999999999.999999999 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 999999999.999999999 }
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { -1.234 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 1.234 }
    \fp_log:N \l_A_fp
    \fp_add:Nn \l_A_fp { 1e4 }
    \fp_log:N \l_A_fp
    \fp_gset:Nn \g_A_fp { -0.001 }
    \fp_log:N  \g_A_fp
    \fp_gadd:Nn \g_A_fp { -0.999 }
    \fp_log:N  \g_A_fp
  \group_end:
  \fp_log:N \l_A_fp
  \fp_log:N \g_A_fp
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\TEST{Subtraction}{ % 6
  \group_begin:
    \fp_set:Nn \l_A_fp { 1 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 100 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 0.99 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 0.01 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 4e-4 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { -3000.123 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 10000 }
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { 99.123456 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { -40000 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 40000 }
    \fp_set:Nn \l_A_fp { -999999999.999999999 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { 999999999.999999999 }
    \fp_log:N \l_A_fp
    \fp_log:N \l_A_fp
    \fp_set:Nn \l_A_fp { -1.234 }
    \fp_log:N \l_A_fp
    \fp_sub:Nn \l_A_fp { -1.234 }
    \fp_log:N \l_A_fp
    \fp_gset:Nn \g_A_fp { -0.001 }
    \fp_log:N  \g_A_fp
    \fp_gsub:Nn \g_A_fp { 0.999 }
    \fp_log:N  \g_A_fp
  \group_end:
  \fp_log:N \l_A_fp
  \fp_log:N \g_A_fp
}

